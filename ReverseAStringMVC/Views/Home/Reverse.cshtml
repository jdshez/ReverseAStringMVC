@model ReverseAStringMVC.Models.Palindrome

<div class="container col-xxl-8 px-4 py-5 mt-5">
    <div class="row gy-2 h-100 row-cols-md-2 row-cols-1">
        <div class="col border-2 border-end">
            <h1 class="fw-bold lh-1 mb-3">Palindrome Check</h1>
            <h4 class="lead">
                Reverse a string and see if it's the same backwards as it is forwards!
            </h4>
            <h5>
                *Palindrome - a word, phrase or sequence that reads the same backwards as forwards
            </h5>
            <h2 class="mt-5 border-bottom border-2">Instruction</h2>
            <p>Enter a word or sentence and press the button to check whether it's a palindrome or not!</p>
        </div>
        <div class="col">
            <div>
                <h5>Enter a string</h5>
                @* Form goes here *@
                <form class="row gy-2 gx-3" asp-action="Reverse" asp-controller="Home" method="post">
                    <div class="col">
                        <input asp-for="InputWord" class="form-control" value="@Model.InputWord" placeholder="* type a word" />
                    </div>
                    <div class="col-12 d-flex align-items-center justify-content-lg-end justify-content-start">
                        <button id="btnSubmit" type="submit" class="btn btn-dark btn-lg">
                            Palindrome Test
                        </button>
                    </div>
                </form>

                <h5 class="mt-5 border-bottom border-2">Reversal Result</h5>
                <div class="col">
                    <p class="form-control">@Model.RevWord</p>
                </div>

                <h2 class="mt-5 border-bottom border-2">Palindrome Result</h2>
                <div class="table-responsive">
                    <p id="results">
                        @Model.Message
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>
